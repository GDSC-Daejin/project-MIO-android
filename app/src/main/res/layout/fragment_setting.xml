    <!-- Information Section -->

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="알림"
        android:textColor="@color/mio_blue_4"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/enable_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:lineSpacingExtra="6.4sp"
            android:text="알림 수신 여부"
            android:fontFamily="@font/pretendard_medium"
            android:textOff=""
            android:textOn=""
            android:textSize="16sp"
            android:thumb="@drawable/switch_thumb_selector"
            app:switchMinWidth="0dp"
            app:thumbTextPadding="24dp"
            app:track="@drawable/switch_track_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메시지 알림을 받으려면 체크하세요"
            android:textSize="10sp"
            android:fontFamily="@font/pretendard_medium" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="정보"
        android:textColor="@color/mio_blue_4"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout14" />


    <TextView
        android:id="@+id/open_source_license"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="오픈소스 라이선스"
        android:textSize="16sp"
        android:textColor="@color/mio_gray_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/open_source_license2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="오픈소스 라이선스2"
        android:textSize="16sp"
        android:textColor="@color/mio_gray_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_source_license" />


</androidx.constraintlayout.widget.ConstraintLayout>