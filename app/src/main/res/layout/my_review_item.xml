<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--카드 전체-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/review_round_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--제목?-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >

            <TextView
                android:id="@+id/review_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="차 태워주세요"
                android:textSize="16sp"
                android:textColor="@color/mio_gray_12"
                android:fontFamily="@font/pretendard_medium"
               />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:text="카풀완료"
                    android:textSize="14sp"
                    android:textColor="@color/mio_gray_8"
                    />

                <TextView
                    android:id="@+id/review_complete_createDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:text="2023.09.24"
                    android:textSize="15sp"
                    android:textColor="@color/mio_gray_8"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/mio_gray_4"
                />
        </LinearLayout>
        
        <!--아이콘-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/review_satisfaction"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/review_satisfaction_icon" />

            <ImageView
                android:id="@+id/review_commonly"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/review_commonly_icon" />

            <ImageView
                android:id="@+id/review_dissatisfaction"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/review_dissatisfaction_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/review_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="카풀 감사합니다. 덕분에 한 사람이 살았어요."
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/mio_gray_10"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            >

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/review_createDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23.09.15"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="12sp"
                android:textColor="@color/mio_gray_6"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>