<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/participation_ll"
    android:backgroundTint="@color/mio_gray_4"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/mio_gray_4"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/participation_filter_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="택시 | 등교 여성 흡연 X"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/mio_gray_8"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/participation_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2023-08-14"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/mio_gray_7"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/participation_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="나 태워줘요"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/mio_gray_9"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/participation_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn_layout_participation"
                android:text="취소"
                android:textColor="@color/mio_gray_9"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="14sp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>